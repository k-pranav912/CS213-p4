<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pizzashop.PizzaCustomizationController">
   <children>
      <GridPane gridLinesVisible="true" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="438.0" minWidth="10.0" prefWidth="349.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="251.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Size: (default small) $1.49 per upgrade" />
                  <HBox prefHeight="21.0" prefWidth="349.0" spacing="10.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Medium" />
                        <RadioButton mnemonicParsing="false" text="Large" />
                     </children>
                  </HBox>
                  <VBox prefHeight="135.0" prefWidth="349.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="23.0" prefWidth="349.0">
                           <children>
                              <Label text="Available Toppings">
                                 <HBox.margin>
                                    <Insets right="50.0" />
                                 </HBox.margin>
                              </Label>
                              <Label alignment="CENTER" text="Selected Toppings">
                                 <HBox.margin>
                                    <Insets left="50.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <ListView prefHeight="200.0" prefWidth="200.0" />
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Button mnemonicParsing="false" text="=&gt;">
                                       <VBox.margin>
                                          <Insets bottom="5.0" />
                                       </VBox.margin>
                                    </Button>
                                    <Button mnemonicParsing="false" text="&lt;=">
                                       <VBox.margin>
                                          <Insets top="5.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                              <ListView prefHeight="200.0" prefWidth="200.0">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </ListView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox prefHeight="44.0" prefWidth="345.0">
                     <children>
                        <Label text="\$">
                           <HBox.margin>
                              <Insets top="4.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="s1PriceTextField" editable="false" promptText="0.00" />
                        <Button fx:id="s1PriceButton" mnemonicParsing="false" onAction="#updatePrice" text="Update Price" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="32.0" prefWidth="345.0" spacing="40.0">
                     <children>
                        <Button mnemonicParsing="false" text="Back to Main Menu" />
                        <Button mnemonicParsing="false" text="Add to Order" />
                     </children>
                  </HBox>
               </children>
               <GridPane.margin>
                  <Insets left="4.0" />
               </GridPane.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="2.0" GridPane.columnIndex="1">
               <children>
                  <ImageView fitHeight="240.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" />
                  <TextArea editable="false" maxWidth="240.0" prefHeight="150.0" prefWidth="240.0" />
               </children>
               <padding>
                  <Insets right="2.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
